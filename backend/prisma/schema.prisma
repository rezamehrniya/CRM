generator client {
  provider      = "prisma-client-js"
  // native = لوکال؛ debian-openssl-3.0.x = داکر با node:bookworm-slim؛ linux-musl-openssl-3.0.x = Alpine
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  status    String   // ACTIVE, SUSPENDED
  createdAt DateTime @default(now())

  memberships   Membership[]
  sessions      Session[]
  subscriptions Subscription[]
  contacts      Contact[]
  companies     Company[]
  pipelines     Pipeline[]
  deals         Deal[]
  leads         Lead[]
  activities    Activity[]
  tasks         Task[]
  auditLogs     AuditLog[]
  invoices      Invoice[]
}

model User {
  id           String   @id @default(cuid())
  phone        String?
  email        String?
  firstName    String?  // نام — اجباری برای عضو جدید
  lastName     String?  // نام خانوادگی — اجباری برای عضو جدید
  displayName  String?
  avatarUrl    String?
  passwordHash String?
  createdAt    DateTime @default(now())
  status       String   // ACTIVE, DISABLED

  memberships       Membership[]
  sessions          Session[]
  contactsOwned     Contact[]   @relation("ContactOwner")
  dealsOwned        Deal[]      @relation("DealOwner")
  leadsOwned        Lead[]      @relation("LeadOwner")
  activitiesCreated Activity[]  @relation("ActivityCreator")
  tasksAssigned     Task[]      @relation("TaskAssignee")
}

model Session {
  id               String   @id @default(cuid())
  userId           String
  tenantId         String
  refreshTokenHash String
  expiresAt        DateTime
  createdAt        DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, userId])
}

model Membership {
  id        String   @id @default(cuid())
  tenantId  String
  userId    String
  role      String   // OWNER, MEMBER
  status    String   // INVITED, ACTIVE, DISABLED

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
}

model Contact {
  id          String   @id @default(cuid())
  tenantId    String
  firstName   String   // نام
  lastName    String   // نام خانوادگی
  phone       String?
  email       String?
  companyId   String?
  ownerUserId String?

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  company  Company?  @relation(fields: [companyId], references: [id], onDelete: SetNull)
  owner    User?     @relation("ContactOwner", fields: [ownerUserId], references: [id], onDelete: SetNull)
  deals    Deal[]
  activities Activity[]
  tasks    Task[]
}

model Company {
  id       String  @id @default(cuid())
  tenantId String
  name     String
  phone    String?
  website  String?

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  contacts Contact[]
  deals    Deal[]
}

model Pipeline {
  id        String  @id @default(cuid())
  tenantId  String
  name      String
  isDefault Boolean @default(false)

  tenant Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  stages PipelineStage[]
  deals  Deal[]
}

model PipelineStage {
  id         String  @id @default(cuid())
  tenantId   String
  pipelineId String
  name       String
  order      Int

  pipeline Pipeline @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  deals    Deal[]
}

model Deal {
  id                String    @id @default(cuid())
  tenantId          String
  title             String
  amount            Decimal?  @db.Decimal(18, 0)
  stageId           String
  pipelineId        String
  contactId         String?
  companyId         String?
  ownerUserId       String?
  expectedCloseDate DateTime?

  tenant   Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  stage    PipelineStage @relation(fields: [stageId], references: [id], onDelete: Cascade)
  pipeline Pipeline      @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  contact  Contact?      @relation(fields: [contactId], references: [id], onDelete: SetNull)
  company  Company?      @relation(fields: [companyId], references: [id], onDelete: SetNull)
  owner    User?         @relation("DealOwner", fields: [ownerUserId], references: [id], onDelete: SetNull)
  activities Activity[]
  tasks    Task[]
}

model Activity {
  id              String   @id @default(cuid())
  tenantId        String
  type            String   // CALL, MEETING, NOTE
  contactId       String?
  dealId          String?
  body            String?
  happenedAt      DateTime
  createdByUserId String?

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  contact   Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)
  deal      Deal?    @relation(fields: [dealId], references: [id], onDelete: SetNull)
  createdBy User?   @relation("ActivityCreator", fields: [createdByUserId], references: [id], onDelete: SetNull)
}

model Lead {
  id          String    @id @default(cuid())
  tenantId    String
  firstName   String    // نام
  lastName    String    // نام خانوادگی
  phone       String?
  email       String?
  companyName String?
  source      String?   // منبع لید: سایت، تبلیغ، تماس
  status      String    @default("NEW") // NEW, CONTACTED, QUALIFIED, CONVERTED, LOST
  notes       String?
  followUpAt  DateTime?
  ownerUserId String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  owner  User?  @relation("LeadOwner", fields: [ownerUserId], references: [id], onDelete: SetNull)
}

model Task {
  id               String    @id @default(cuid())
  tenantId         String
  title            String
  dueAt            DateTime?
  status           String    // OPEN, DONE
  assignedToUserId String?
  contactId        String?
  dealId           String?

  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  contact     Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: SetNull)
  assignedTo  User?    @relation("TaskAssignee", fields: [assignedToUserId], references: [id], onDelete: SetNull)
}

model AuditLog {
  id          String   @id @default(cuid())
  tenantId    String
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  metaJson    Json?
  createdAt   DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Subscription {
  id             String   @id @default(cuid())
  tenantId       String   @unique
  planCode       String   // CRM_ANNUAL
  status         String   // ACTIVE, EXPIRED
  startsAt       DateTime
  endsAt         DateTime
  baseSeatLimit  Int      @default(20)
  addonSeatCount Int      @default(0)
  priceAnnual    Int?     // IRR

  tenant  Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  invoices Invoice[]
}

model Invoice {
  id             String    @id @default(cuid())
  tenantId       String
  subscriptionId String?
  status         String    // DRAFT, ISSUED, PAID
  issuedAt       DateTime?
  dueAt          DateTime?
  paidAt         DateTime?
  totalAmount    Int?

  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  items        InvoiceItem[]
}

model InvoiceItem {
  id         String @id @default(cuid())
  invoiceId  String
  type       String // RENEWAL, ADDON_SEATS
  quantity   Int
  unitPrice  Int
  totalPrice Int
  metaJson   Json?  // e.g. { "packSize": 5 }

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

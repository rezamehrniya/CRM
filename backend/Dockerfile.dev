# Backend development — run with volume mount to see code changes (nest --watch)
# نیاز: schema.prisma باید binaryTargets شامل debian-openssl-3.0.x باشد (Bookworm فقط OpenSSL 3 دارد)
FROM node:20-bookworm-slim
WORKDIR /app
COPY package.json package-lock.json* ./
RUN npm install
COPY . .
RUN npx prisma generate
EXPOSE 3000
CMD ["npm", "run", "start:dev"]
